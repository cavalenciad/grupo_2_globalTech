<header>
    
    <!-------- LOGO -------->
    <a href="/"><img src="/images/Logo-letras.png" alt="Logo Global Tech"></a>
    <!-------- NAVBAR -------->
    <nav class="Snavbar">
        <a href="/"><i class="fa-solid fa-house-user"></i> INICIO</a>
        <a href="/about-us"><i class="fa-solid fa-user-group"></i> SOBRE NOSOTROS</a>
        <a href="/products"><i class="fa-solid fa-shop"></i> CATÁLOGO DE PRODUCTOS</a>
        <a href="/products/cart"><i class="fa-solid fa-cart-shopping"></i> CARRITO DE COMPRAS</a>
        <% if(!locals.userLogged) {%> 
            <a href="/user/register"><i class="fa-solid fa-rectangle-list"></i> REGISTRO</a>
            <a href="/user/login"><i class="fa-solid fa-address-card"></i> LOGIN</a>
        <% } %> 
    </nav>

      <!-------- ICONO Y NOMBRE USUARIO -------->
      
      <% if(locals.userLogged) {%>
        <div class="user">
            <div class="dataUser">
                <p><%= locals.userLogged.nombreusuario %> </p>
                <i class="fa-solid fa-caret-down"></i>
                <img src="/images/images_user/<%= locals.userLogged.imagen %>" alt="Usuario">  
            </div>
            <div class="actionUser">
                <h6><a href="/user/userProfile/<%= locals.userLogged.idusuarios %> ">Mi Perfil</a></h6>
                <hr>
                <h6><a href="/user/logout">Cerrar Sesión</a> </h6>
            </div>
        </div>
 <% } %>

    <!-------- ICONO MENU HAMBURGUESA -------->
    <div class="hamburger">
      <div class="_layer -top"></div>
      <div class="_layer -mid"></div>
      <div class="_layer -bottom"></div>
    </div>
    <nav class="menuppal">
        <ul>
          <li><a href="/"><i class="fa-solid fa-house-user"></i> INICIO</a></li>
          <li><a href="/about-us"><i class="fa-solid fa-user-group"></i> SOBRE NOSOTROS</a></li>
          <li><a href="/products"><i class="fa-solid fa-shop"></i> CATÁLOGO DE PRODUCTOS</a></li>
          <li><a href="/products/cart"><i class="fa-solid fa-cart-shopping"></i> CARRITO DE COMPRAS</a></li>
            <% if(!locals.userLogged) {%> 
              <li><a href="/user/register"><i class="fa-solid fa-rectangle-list"></i> REGISTRO</a></li>
              <li><a href="/user/login"><i class="fa-solid fa-address-card"></i> LOGIN</a></li>
          <% } %> 
        </ul>
      </nav>

      <script>
        // selector
var menu = document.querySelector('.hamburger');

// metodo
function toggleMenu (event) {
  this.classList.toggle('is-active');
  document.querySelector( ".menuppal" ).classList.toggle("is_active");
  event.preventDefault();
}

// evento
menu.addEventListener('click', toggleMenu, false);

      </script>

</header>